apiVersion: v1
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ project_name }}
  namespace: {{ namespace }}
subjects:
  - kind: ServiceAccount
    name: {{ project_name }}
    namespace: {{ namespace }}
roleRef:
  kind: ClusterRole
  name: cluster-admin
  apiGroup: rbac.authorization.k8s.io
